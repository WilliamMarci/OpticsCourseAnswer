% --- section & frame setting ---
% subsection
\newcommand{\strsubsec}{Section \thesection.\thesubsection}

% presents subtitle on each frame
\makeatletter
    \pretocmd\beamer@checkframetitle{\framesubtitle{\thesection \, \secname}}
\makeatother

% avoid numbering of frames that are breaked into multiply slides
\setbeamertemplate{frametitle continuation}{}

% section page with the current section highlighted
\AtBeginSection[]
{
    \begingroup
    \setbeamertemplate{footline}{}
    \themecolor{colorbg}
    \begin{frame}{\tocStr}
        \tableofcontents[currentsection]
    \end{frame}
    \endgroup
}

% subsection title page
\AtBeginSubsection[]
{
    \begin{frame}{\,}{\thesection \, \secname}
        \fontfamily{ptm}\selectfont
        \centering\textsl{\textbf{\textcolor{maincolor}{
            \large Section \thesection.\thesubsection
            \vskip15pt
            \LARGE \subsecname
        }}}
    \end{frame}
}

% --- page elements ---
% frame title & subtitle layout
\setbeamertemplate{frametitle}{
    \vspace*{-3.5ex}
    % \vspace*{1ex}
    % \begin{beamercolorbox}[leftskip=2cm]{frametitle}
    \begin{beamercolorbox}[leftskip=1.5cm]{frametitle}
    \usebeamerfont{frametitle}\insertframetitle\\
    % \usebeamerfont{framesubtitle}\insertframesubtitle
    \usebeamerfont{framesubtitle}\vspace{4mm}
    \end{beamercolorbox}
}

% title page
\setbeamertemplate{title page}{
    \hspace{-12mm}  % pull back the box in an inelegant way - but it works!
    \begin{beamercolorbox}[wd=1.15\textwidth, sep=10pt, leftskip=20mm]{title}
        {
        \vspace*{15mm}\\
        \usebeamerfont{title}\Huge{\inserttitle}}\\
        \vskip5pt{\usebeamerfont{subtitle}\insertsubtitle}\\
        \vspace*{15mm}
        \vskip5pt{\usebeamerfont{author}\usebeamercolor[fg]{author}\insertauthor}\\
        \vskip3pt{Peking University \hfill\usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate}
    \end{beamercolorbox}
}

\renewcommand{\maketitle}{
    \begingroup
        \setbeamertemplate{footline}{}
        \setbeamertemplate{background}{
            \includegraphics[height=\paperheight]{\backgroundPath}
        }
        \begin{frame}
            \titlepage
        \end{frame}
    \endgroup
}

% Q&A page
\newcommand{\QApage}{
    \themecolor{colorbg}
    \begingroup
        \setbeamertemplate{footline}{}
        
        \begin{frame}{}
            \centering
            \begin{minipage}{\textwidth}
                \usebeamercolor[fg]{normal text}
                \centering
                \Huge $$\mathcal Q \& \mathcal A$$
                \tiny \qaStr
            \end{minipage}
        \end{frame}
    \endgroup
}

% bibliography page
\newcommand{\bibliographpage}{
    \section{References}

    \begingroup
    \themecolor{colorbg}
    \begin{frame}[allowframebreaks]{References}{\,}
